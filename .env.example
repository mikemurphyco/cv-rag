# CV-RAG Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git!

# Neon Postgres Connection
# Get this from: https://console.neon.tech/ → Your Project → Connection String
NEON_CONNECTION_STRING=postgresql://username:password@host.neon.tech/dbname?sslmode=require

# n8n Webhook URL (for query workflow)
# Get this after creating your n8n workflow with a webhook trigger
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/cv-rag-query

# Ollama API URL (on your VPS)
# Default local: http://localhost:11434
# VPS: http://your-vps-ip:11434
OLLAMA_API_URL=http://localhost:11434

# Optional: OpenAI API Key (if you want to use API-based embeddings later)
# OPENAI_API_KEY=sk-...

# Optional: Model configurations
EMBEDDING_MODEL=all-MiniLM-L6-v2
OLLAMA_MODEL=llama3:8b
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=3
